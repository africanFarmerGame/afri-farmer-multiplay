package uk.ac.sussex.controller {	import uk.ac.sussex.view.BankGMOverviewListMediator;	import uk.ac.sussex.states.FinesManagerGameState;	import uk.ac.sussex.general.ApplicationFacade;	import uk.ac.sussex.serverhandlers.BankHandlers;	import org.puremvc.as3.multicore.interfaces.INotification;	import org.puremvc.as3.multicore.patterns.command.SimpleCommand;		public class SubMenuBankManagerCommand extends SimpleCommand {		override public function execute( note:INotification ):void {			var subMenuItem:String = note.getBody() as String;			var overviewDisplay:BankGMOverviewListMediator = facade.retrieveMediator(BankGMOverviewListMediator.NAME) as BankGMOverviewListMediator;			trace("SubMenuBankManagerCommand sez: Trying to fire off " + subMenuItem);			switch(subMenuItem){				case BankHandlers.GM_SUB_MENU_OVERVIEW:					overviewDisplay.showList(true);					showOverviewText();					break;				case BankHandlers.GM_SUB_MENU_FINES:					overviewDisplay.showList(false);					sendNotification(ApplicationFacade.CHANGE_STATE, FinesManagerGameState.NAME);					break;			}		}				private function showOverviewText():void{			var overviewText:String = "Bank Overview:\n\n";			overviewText += "This screen provides a snapshot of the wealth of the village. The asset ";			overviewText += "worth is calculated by multiplying the amount of a given asset by the ";			overviewText += "price that the market would buy that asset for. The value of all non-cash ";			overviewText += "assets are then added together to produce the value here.";			sendNotification(ApplicationFacade.DISPLAY_INFO_TEXT, overviewText);		}	}	}