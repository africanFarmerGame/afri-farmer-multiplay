package uk.ac.sussex.controller {		import flash.display.Sprite;	import org.puremvc.as3.multicore.interfaces.*;	import org.puremvc.as3.multicore.patterns.command.*;		import uk.ac.sussex.general.*;	import uk.ac.sussex.view.*;		public class ViewPrepCommand extends SimpleCommand{		override public function execute (note: INotification ): void {			var app:GameGUI = note.getBody() as GameGUI;			facade.registerMediator(new ApplicationMediator(app));			facade.registerMediator(new DisplayMessagePanelMediator());			facade.registerMediator(new BackgroundMediator());			//Sort out the screen layers. 			facade.registerMediator(new ScreenMediator());			facade.registerMediator(new ControlsMediator());			facade.registerMediator(new DragLayerMediator());			facade.registerMediator(new OverlayMediator());			facade.registerMediator(new OverlayDisplayPanelMediator(new Sprite()));					}	}	}