package uk.ac.sussex.controller {	import uk.ac.sussex.model.valueObjects.Form;	import org.puremvc.as3.multicore.interfaces.*;	import org.puremvc.as3.multicore.patterns.command.*;	import uk.ac.sussex.model.RequestProxy;	import uk.ac.sussex.model.ServerProxy;	import uk.ac.sussex.general.ApplicationFacade;	public class SubmitCreateUserCommand extends SimpleCommand{		override public function execute(note:INotification):void {			//Register a wait for successful login thing. 			this.facade.registerCommand(ApplicationFacade.LOGIN_SUCCESSFUL, SubmitCreateUserRequestDataCommand);						trace("SubmitCreateUserCommand sez: Building up the request object.");						var submittedForm:Form = note.getBody() as Form;			var submittedUsername:String = submittedForm.getFieldValue("username");			var username:String = "create|" + submittedUsername;			var submittedPassword:String = submittedForm.getFieldValue("newpwd");									if(submittedUsername==null || submittedUsername.length==0){				var usernameError:String = "You must complete the username field.";				sendNotification(ApplicationFacade.DISPLAY_ERROR_MESSAGE, usernameError);			} else if (submittedPassword==null || submittedPassword.length == 0){				var passwordError:String = "You must complete the password field.";				sendNotification(ApplicationFacade.DISPLAY_ERROR_MESSAGE, passwordError);			} else {								//Sort out the request proxy here, so it can just be sent once we've got a logged in connection. 				var requestProxy:RequestProxy = facade.retrieveProxy("player.create"+RequestProxy.NAME) as RequestProxy;				requestProxy.setParamValue("username", submittedUsername);				requestProxy.setParamValue("newpwd", submittedPassword);								var server:ServerProxy = facade.retrieveProxy(ServerProxy.NAME) as ServerProxy;				server.login(username, "");			}		}	}	}