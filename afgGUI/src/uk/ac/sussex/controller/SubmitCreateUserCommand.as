				var passwordError:String = "You must complete the password field.";				sendNotification(ApplicationFacade.DISPLAY_ERROR_MESSAGE, passwordError);			} else {								//Sort out the request proxy here, so it can just be sent once we've got a logged in connection. 				var requestProxy:RequestProxy = facade.retrieveProxy("player.create"+RequestProxy.NAME) as RequestProxy;				requestProxy.setParamValue("username", submittedUsername);				requestProxy.setParamValue("newpwd", submittedPassword);								var server:ServerProxy = facade.retrieveProxy(ServerProxy.NAME) as ServerProxy;				server.login(username, "");			}		}	}	}