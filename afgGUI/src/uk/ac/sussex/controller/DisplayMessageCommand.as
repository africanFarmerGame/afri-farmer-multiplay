package uk.ac.sussex.controller {	import uk.ac.sussex.view.ApplicationMediator;	import uk.ac.sussex.view.OverlayDisplayPanelMediator;	import org.puremvc.as3.multicore.patterns.command.SimpleCommand;	import org.puremvc.as3.multicore.interfaces.*;	import uk.ac.sussex.view.components.ScrollingTextBox;	/**	 * @author em97	 */	public class DisplayMessageCommand extends SimpleCommand {		override public function execute(note:INotification):void {			var message:String = note.getBody() as String;			trace("DisplayMessageCommand sez: I'll display a message on the screen: "+ message);			var overlayDisplayMediator:OverlayDisplayPanelMediator = facade.retrieveMediator(OverlayDisplayPanelMediator.NAME) as OverlayDisplayPanelMediator;			var appMediator:ApplicationMediator = facade.retrieveMediator(ApplicationMediator.NAME) as ApplicationMediator;			var maxWidth:Number = appMediator.getDisplayWidth() - 50;			var maxHeight:Number = appMediator.getDisplayHeight() - 50;						var textField:ScrollingTextBox = new ScrollingTextBox(maxWidth - 100, maxHeight-50);			textField.setText(message);			overlayDisplayMediator.resizePanel(maxWidth, maxHeight);			overlayDisplayMediator.addToPanel(textField, 0, 0);			overlayDisplayMediator.displayPanel();		}	}}