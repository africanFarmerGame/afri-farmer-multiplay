package uk.ac.sussex.view.components {	import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.events.Event;	import flash.text.*;		public class GameButton extends MovieClip {		private var background:TaskBtn;				private static const DEFAULT_WIDTH:Number = 100;				public static const BUTTON_CLICK:String = "game_button_click";				public function GameButton(label:String = "") {			// constructor code			background = new TaskBtn();			var scale:Number = DEFAULT_WIDTH/background.width;						background.scaleX = background.scaleY = scale;			background.gotoAndStop("UP");			this.addChild(background);						if(label != ""){				var tFormat:TextFormat = new TextFormat();				tFormat.font = "Calibri";				tFormat.size = 14;				tFormat.bold = false;				tFormat.align = TextFormatAlign.CENTER;								var textField:TextField = new TextField();				textField.height = 20;				textField.selectable = false;				textField.defaultTextFormat = tFormat;				textField.autoSize = TextFieldAutoSize.CENTER;				textField.textColor = 0xffffff;				textField.x = (this.width - textField.width) / 2;				textField.y = 2;				textField.text = label;				this.addChild(textField);			}			this.buttonMode = true;			this.mouseChildren = false;			this.addEventListener(MouseEvent.MOUSE_OVER, mouseOver);			this.addEventListener(MouseEvent.MOUSE_OUT, mouseOut);			this.addEventListener(MouseEvent.MOUSE_DOWN, mouseDown);			this.addEventListener(MouseEvent.MOUSE_UP, mouseUp);		}		private function mouseUp(e:MouseEvent):void {			this.dispatchEvent(new Event(BUTTON_CLICK, true));			background.gotoAndStop("UP");		}		private function mouseDown(e:MouseEvent):void {			background.gotoAndStop("DOWN");		}		private function mouseOver(e:MouseEvent):void {			background.gotoAndStop("OVER");		}		private function mouseOut(e:MouseEvent):void {			background.gotoAndStop("UP");		}	}	}