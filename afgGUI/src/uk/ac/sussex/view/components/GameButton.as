tonMode = true;			this.mouseChildren = false;			this.addEventListener(MouseEvent.MOUSE_OVER, mouseOver);			this.addEventListener(MouseEvent.MOUSE_OUT, mouseOut);			this.addEventListener(MouseEvent.MOUSE_DOWN, mouseDown);			this.addEventListener(MouseEvent.MOUSE_UP, mouseUp);		}		private function mouseUp(e:MouseEvent):void {			this.dispatchEvent(new Event(BUTTON_CLICK, true));			background.gotoAndStop("UP");		}		private function mouseDown(e:MouseEvent):void {			background.gotoAndStop("DOWN");		}		private function mouseOver(e:MouseEvent):void {			background.gotoAndStop("OVER");		}		private function mouseOut(e:MouseEvent):void {			background.gotoAndStop("UP");		}	}	}