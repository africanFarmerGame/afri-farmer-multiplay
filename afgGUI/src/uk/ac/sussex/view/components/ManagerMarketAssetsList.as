ateAssetItem(ma:MarketAsset):void{			var maListItem:ManagerMAListItem = scrollingList.getItemWithID(ma.getId().toString()) as ManagerMAListItem;			if(maListItem != null){				maListItem.setAmount(ma.getAmount().toString(), ma.getAsset().getMeasurement());				maListItem.setBuyPrice(ma.getBuyPrice().toString());				maListItem.setSellPrice(ma.getSellPrice().toString());			} else {				throw new Error("MarketAssetsList sez: Tried to get asset " + ma.getId() + " for updating but failed. Sorry!");			}		}		public function clearSelection():void {			scrollingList.clearCurrentSelection();		}		public function getSelectedMAId():String{			var selectedId:String = scrollingList.getCurrentValue();			return selectedId;		}		public function clearList():void {			scrollingList.clearCurrentSelection();			scrollingList.clearList();		}		private function setupTitleBar():void {			var titleBar:Shape = new Shape();			titleBar.graphics.lineStyle(1,0x000000);			titleBar.graphics.beginFill(0xF49160); 			titleBar.graphics.drawRect(0,0,607,25);			titleBar.graphics.endFill();				this.addChild(titleBar);			var tFormat:TextFormat = new TextFormat();			tFormat.font = "Calibri";			tFormat.size = 17;			tFormat.bold = false;			tFormat.align = TextFormatAlign.CENTER;							var headers:Array = ManagerMAListItem.getColumnHeaders();						for each (var header:Array in headers){				var text:TextField = new TextField();				text.defaultTextFormat = tFormat;				text.textColor = 0x000000;				text.background = false;				text.border = false;				text.borderColor = 0x000000;				text.selectable = false;				text.x = header.pop();				text.width = header.pop();				text.text = header.pop();				text.height = 25;				text.y = 0;				this.addChild(text);			}		}	}}