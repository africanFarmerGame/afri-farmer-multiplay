package uk.ac.sussex.view.components {	import flash.text.TextFormatAlign;	import flash.text.TextFormat;	import flash.text.TextField;	import flash.display.Shape;	import uk.ac.sussex.model.valueObjects.MarketAsset;	import uk.ac.sussex.model.valueObjects.GameAsset;	import flash.display.MovieClip;		public class ManagerMarketAssetsList extends MovieClip {		private var scrollingList:ScrollingList;				public function ManagerMarketAssetsList() {			setupTitleBar();			scrollingList = new ScrollingList(620, 264);			scrollingList.x = 0;			scrollingList.y = 25; 			scrollingList.showBackgroundFilter(false);			scrollingList.setBorderColour(0x09063A);			addChild(this.scrollingList);		}		public function addAssetItem(marketAsset:MarketAsset):void {			var asset:GameAsset = marketAsset.getAsset();			var newItem:ManagerMAListItem = new ManagerMAListItem();			newItem.setAmount(marketAsset.getAmount().toString(), asset.getMeasurement());			newItem.setAsset(asset);			newItem.setBuyPrice(marketAsset.getBuyPrice().toString());			newItem.setSellPrice(marketAsset.getSellPrice().toString());			newItem.setItemID(marketAsset.getId().toString());			scrollingList.addItem(newItem);		}		public function updateAssetItem(ma:MarketAsset):void{			var maListItem:ManagerMAListItem = scrollingList.getItemWithID(ma.getId().toString()) as ManagerMAListItem;			if(maListItem != null){				maListItem.setAmount(ma.getAmount().toString(), ma.getAsset().getMeasurement());				maListItem.setBuyPrice(ma.getBuyPrice().toString());				maListItem.setSellPrice(ma.getSellPrice().toString());			} else {				throw new Error("MarketAssetsList sez: Tried to get asset " + ma.getId() + " for updating but failed. Sorry!");			}		}		public function clearSelection():void {			scrollingList.clearCurrentSelection();		}		public function getSelectedMAId():String{			var selectedId:String = scrollingList.getCurrentValue();			return selectedId;		}		public function clearList():void {			scrollingList.clearCurrentSelection();			scrollingList.clearList();		}		private function setupTitleBar():void {			var titleBar:Shape = new Shape();			titleBar.graphics.lineStyle(1,0x000000);			titleBar.graphics.beginFill(0xF49160); 			titleBar.graphics.drawRect(0,0,607,25);			titleBar.graphics.endFill();				this.addChild(titleBar);			var tFormat:TextFormat = new TextFormat();			tFormat.font = "Calibri";			tFormat.size = 17;			tFormat.bold = false;			tFormat.align = TextFormatAlign.CENTER;							var headers:Array = ManagerMAListItem.getColumnHeaders();						for each (var header:Array in headers){				var text:TextField = new TextField();				text.defaultTextFormat = tFormat;				text.textColor = 0x000000;				text.background = false;				text.border = false;				text.borderColor = 0x000000;				text.selectable = false;				text.x = header.pop();				text.width = header.pop();				text.text = header.pop();				text.height = 25;				text.y = 0;				this.addChild(text);			}		}	}}