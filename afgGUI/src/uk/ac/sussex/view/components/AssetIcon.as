case "GRAIN":					this.gotoAndStop("sorghum");					break;				case "HORTICULTURE":					this.gotoAndStop("horticulture");					break;				default:					this.gotoAndStop(1);					break;			}		}		private function selectOther(name:String):void {			trace("AssetIcon sez: The asset name is " + name);			switch(name.toUpperCase()) {				case "CASH":					this.gotoAndStop("cash");					break;				case "SPRAYKIT":					this.gotoAndStop("spray kit");					break;				case "VOUCHERS":					this.gotoAndStop("vouchers");					break;				case "CROPSTORE":					this.gotoAndStop("granary");					break;				case "COTTON":					this.gotoAndStop("cotton");					break;				default: 					this.gotoAndStop("notrequired");			}		}		private function selectFertiliser(subtype:String):void {			switch(subtype.toUpperCase()) {				case "ORGANIC":					this.gotoAndStop("manure");					break;				case "INORGANIC":				default:					this.gotoAndStop("fertilizer");					break;			}		}	}	}