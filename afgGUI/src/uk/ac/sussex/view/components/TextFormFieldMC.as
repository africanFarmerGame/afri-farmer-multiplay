package uk.ac.sussex.view.components {	import flash.events.Event;	import uk.ac.sussex.model.valueObjects.FormField;		/**	 * @author em97	 */	public class TextFormFieldMC extends GenericFormFieldMC {		private var textInput:GameTextField;				public function TextFormFieldMC(formField:FormField) {			super(formField);			textInput = new GameTextField();			textInput.displayAsPassword = (formField.getFieldType() == FormField.TYPE_TEXTHIDDEN);			textInput.maxChars = formField.getMaxLength();			textInput.allowedChars = formField.getAllowedChars();			textInput.x = label.x + label.width + GAP_SIZE;			textInput.addEventListener(GameTextField.VALUE_CHANGED, valueChanged);						this.addChild(textInput);		}		override public function setFieldValue() : void {			var fieldValue:String = field.getFieldValue();			if( fieldValue != null){				textInput.text = fieldValue;			} else {				textInput.text = "";			}		}		override public function setLabelWidth(labelWidth : Number):void {			super.setLabelWidth(labelWidth);			textInput.x = label.x + label.width + GAP_SIZE;		}		override public function updateEnabled():void {			super.updateEnabled();			textInput.enabled = field.getEnabled();		}		private function valueChanged(event:Event):void{			field.setFieldValue(textInput.text);		}	}}