package uk.ac.sussex.view {	import org.puremvc.as3.multicore.patterns.mediator.Mediator;	import org.puremvc.as3.multicore.interfaces.*;		import uk.ac.sussex.general.ApplicationFacade;	import uk.ac.sussex.view.components.GameButton;	import uk.ac.sussex.view.components.CreateNewGameButton;	import uk.ac.sussex.states.JoinGameGameState;	import flash.events.Event;		public class CreateNewGameButtonMediator extends Mediator implements IMediator {		public static const NAME:String = "CreateNewGameButtonMediator";		public function CreateNewGameButtonMediator(viewComponent:Object) {			trace("CreateNewGAmeButtonMediator sez: I is created");			// constructor code			super(NAME, viewComponent);		}		public function setPosition(x:Number, y:Number):void {			createNewGameButton.x = x;			createNewGameButton.y = y;		}		private function buttonClicked(e:Event):void {			sendNotification(JoinGameGameState.CREATE_NEW_GAME);		}		//Cast the viewComponent to the correct type.		protected function get createNewGameButton():CreateNewGameButton {			return viewComponent as CreateNewGameButton;		}		override public function onRegister():void		{			viewComponent = new CreateNewGameButton();			createNewGameButton.addEventListener(GameButton.BUTTON_CLICK, buttonClicked);			sendNotification(ApplicationFacade.ADD_TO_SCREEN, createNewGameButton);		}		override public function onRemove():void		{			sendNotification(ApplicationFacade.REMOVE_FROM_SCREEN, createNewGameButton);		}	}	}