package  uk.ac.sussex.view {	import org.puremvc.as3.multicore.patterns.mediator.Mediator;	import org.puremvc.as3.multicore.interfaces.*;		import uk.ac.sussex.general.ApplicationFacade;	import uk.ac.sussex.view.components.GameButton;	import uk.ac.sussex.view.components.CreateUserButton;	import flash.events.Event;		public class CreateUserButtonMediator extends Mediator implements IMediator{		public static const NAME:String = "CreateUserButtonMediator";						public function CreateUserButtonMediator(viewComponent:Object) {			// constructor code			super(NAME, viewComponent);		}		public function setPosition(x:Number, y:Number):void {			createUserButton.x = x;			createUserButton.y = y;		}		private function buttonClicked(e:Event):void {			sendNotification(ApplicationFacade.CREATE_USER_CLICKED);		}		//Cast the viewComponent to the correct type.		protected function get createUserButton():CreateUserButton {			return viewComponent as CreateUserButton;		}		override public function onRegister():void		{			viewComponent = new CreateUserButton();						createUserButton.addEventListener(GameButton.BUTTON_CLICK, buttonClicked);			//var gameMediator:ApplicationMediator = facade.retrieveMediator(ApplicationMediator.NAME) as ApplicationMediator;			//var xpos:Number = gameMediator.getLeftWidth() + gameMediator.getRightWidth() - createUserButton.width - 23;			createUserButton.x = 0;			createUserButton.y = 0;						sendNotification(ApplicationFacade.ADD_TO_SCREEN, createUserButton);		}		override public function onRemove():void		{			sendNotification(ApplicationFacade.REMOVE_FROM_SCREEN, createUserButton);		}	}	}