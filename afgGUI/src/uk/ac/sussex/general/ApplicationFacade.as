TE:String = "change_state";		public static const REVERT_STATE:String = "revertState";		public static const REFRESH_STATE:String = "refreshState";		public static const SEND_SERVER_REQUEST:String = "send_server_request";		public static const RECEIVE_SERVER_REQUEST:String = "receive_server_request";		public static const LOGIN_SUCCESSFUL:String = "loginSuccessful";		public static const LOGOUT_SUCCESSFUL:String = "logoutSuccessful";		public static const LOGOUT_REQUEST:String = "logoutRequest";		public static const LOST_SERVER_CONNECTION:String = "lostServerConnection";		public static const CREATE_USER_CLICKED:String = "create_user_clicked";		public static const DISPLAY_ERROR_MESSAGE:String = "displayErrorMessage";		public static const DISPLAY_OVERLAY_FORM:String = "displayOverlayForm";		public static const DISPLAY_MESSAGE:String = "displayMessage";		public static const DISPLAY_INFO_TEXT:String = "displayInfoText";		public static const DISPLAY_TEMP_INFO_TEXT:String = "displayTempInfoText";		public static const REVERT_TEMP_INFO_TEXT:String = "revertTempInfoText";		public static const CLEAR_INFO_TEXT:String = "clearInfoText";		public static const GET_CHARACTER_DATA:String = "getCharacterData";		public static const MY_CHAR:String = "myChar";		public static const INCOMING_ERROR_MESSAGE:String = "incomingDataErrorMessage";		public static const INCOMING_MESSAGE:String = "incomingDataMessage";		public static const SWITCH_SUBMENU_ITEM:String = "SwitchSubMenuItem";		public static const FETCH_STATIC_DATA:String = "FetchStaticData";		public static const DISPLAY_GAME_INFO:String = "DisplayGameInfo";				public static const CURRENT_VERSION:String = "FE5.0.3";				//Role constants. 		public static const MAN:String = "MAN";		public static const WOMAN:String = "WOMAN";		public static const BANKER:String = "BANKER";				public function ApplicationFacade( key:String )		{			super( key );			}				public static function getInstance( key:String ):IFacade {			if (instanceMap[ key ] == null ) instanceMap[ key ] = new ApplicationFacade( key );			return instanceMap[ key ];		}				public function startup ( app:GameGUI ): void {			sendNotification( STARTUP, app );		}				// Register some commands for this facade.		override protected function initializeController():void {			super.initializeController();			registerCommand( STARTUP, StartupCommand );			registerCommand( SEND_SERVER_REQUEST, SendServerRequestCommand);			registerCommand( RECEIVE_SERVER_REQUEST, ReceiveServerRequestCommand);			registerCommand( LOST_SERVER_CONNECTION, LostConnectionCommand);			//registerCommand( DISPLAY_MESSAGE, DisplayMessageCommand );			registerCommand( DISPLAY_OVERLAY_FORM, DisplayOverlayFormCommand );			registerCommand( DISPLAY_GAME_INFO, DisplayGameInfoCommand);		}					}	}