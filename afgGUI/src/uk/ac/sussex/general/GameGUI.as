	}		public function revertState():void {			trace("GameGUI sez: About to revert the state");			this.stateHandler.revertState();			this.stateHandler.getCurrentState().displayState();		}		public function refreshState():void {			this.stateHandler.refreshState();		}		public function getDisplayWidth():Number {			return DISPLAY_WIDTH;		}		public function getDisplayHeight():Number { 			return DISPLAY_HEIGHT;		}		public function getLeftWidth():Number {			return LEFT_WIDTH;		}		public function getRightWidth():Number {			return DISPLAY_WIDTH - LEFT_WIDTH;		}		public function getTopHeight():Number {			return TOP_HEIGHT;		}		public function getCentreHeight():Number {			return CENTRE_HEIGHT;		}		public function getBottomHeight():Number {			return DISPLAY_HEIGHT - TOP_HEIGHT - CENTRE_HEIGHT;		}	}	}