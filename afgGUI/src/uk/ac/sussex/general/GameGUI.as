package uk.ac.sussex.general {		import flash.display.MovieClip;	import uk.ac.sussex.states.StateHandler;		public class GameGUI extends MovieClip {		private var facade:ApplicationFacade;		private var stateHandler:StateHandler;				private static const DISPLAY_WIDTH:Number = 960;		private static const DISPLAY_HEIGHT:Number = 700;		private static const LEFT_WIDTH:Number = 740;		private static const TOP_HEIGHT:Number = 139;		private static const CENTRE_HEIGHT:Number = 321;				public function GameGUI() {			// constructor code					this.facade = ApplicationFacade.getInstance( "Application" ) as ApplicationFacade;			this.stateHandler = new StateHandler();			this.facade.startup( this );			this.gotoAndStop(1);			trace("GameGUI sez: my width is " + this.width + " and my height is " + this.height);		}		public function getStateHandler():StateHandler {			return this.stateHandler;		}		public function getStatesRegistered():Boolean {			return this.stateHandler.getStatesRegistered();		}		public function changeState(newState:String):void {			trace ("GameGUI sez: About to change the state");			this.stateHandler.changeGameState(newState);			this.stateHandler.getCurrentState().displayState();		}		public function revertState():void {			trace("GameGUI sez: About to revert the state");			this.stateHandler.revertState();			this.stateHandler.getCurrentState().displayState();		}		public function refreshState():void {			this.stateHandler.refreshState();		}		public function getDisplayWidth():Number {			return DISPLAY_WIDTH;		}		public function getDisplayHeight():Number { 			return DISPLAY_HEIGHT;		}		public function getLeftWidth():Number {			return LEFT_WIDTH;		}		public function getRightWidth():Number {			return DISPLAY_WIDTH - LEFT_WIDTH;		}		public function getTopHeight():Number {			return TOP_HEIGHT;		}		public function getCentreHeight():Number {			return CENTRE_HEIGHT;		}		public function getBottomHeight():Number {			return DISPLAY_HEIGHT - TOP_HEIGHT - CENTRE_HEIGHT;		}	}	}