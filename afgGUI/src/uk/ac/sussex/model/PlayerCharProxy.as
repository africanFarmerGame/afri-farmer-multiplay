package uk.ac.sussex.model {	import uk.ac.sussex.general.ApplicationFacade;	import org.puremvc.as3.multicore.interfaces.IProxy;	import org.puremvc.as3.multicore.patterns.proxy.Proxy;	import uk.ac.sussex.model.valueObjects.PlayerChar;		/**	 * @author em97	 */	public class PlayerCharProxy extends Proxy implements IProxy {		public function PlayerCharProxy(proxyName : String, data : PlayerChar) {			super(proxyName, data);		}		public function get playerChar():PlayerChar {			return data as PlayerChar;		}		public function getPlayerId():int {			return playerChar.getId();		}		public function getPlayerDisplayName():String {			return playerChar.getFirstName() + " " + playerChar.getFamilyName();		}		public function getPCHearthId():int {			return playerChar.getHearthId();		}		public function isBanker():Boolean {			return (playerChar.getRole() == ApplicationFacade.BANKER);		}		public function updateAvatar(newBody:int):void {			this.playerChar.setAvatarBody(newBody);		}		public function updateFamilyName(newName:String):void {			this.playerChar.setFamilyName(newName);		}		public function updateFirstName(newName:String):void {			this.playerChar.setFirstName(newName);		}		public function updateHearthId(newHearthId:int):void {			this.playerChar.setHearthId(newHearthId);		}		public function updateOnlineStatus(newStatus:Boolean):void {			this.playerChar.setOnlineStatus(newStatus);		}	}}